{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                { "name": "Background", "slug": "background", "color": "#011046" },
                { "name": "Primary", "slug": "primary", "color": "#0057b7" },
                { "name": "Accent", "slug": "accent", "color": "#28E8A3" },
                { "name": "Text", "slug": "text", "color": "#ffffff" }
            ]
        },
        "typography": {
            "fontFamilies": [
                { "name": "Space Grotesk", "slug": "space-grotesk", "fontFamily": "'Space Grotesk', sans-serif" },
                { "name": "Red Hat Display", "slug": "red-hat-display", "fontFamily": "'Red Hat Display', sans-serif" }
            ],
            "fontSizes": [
                { "name": "Small", "slug": "small", "size": "14px" },
                { "name": "Normal", "slug": "normal", "size": "16px" },
                { "name": "Large", "slug": "large", "size": "24px" }
            ]
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1200px"
        }
    },
    "styles": {
        "color": {
            "background": "#011046",
            "text": "#ffffff"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--red-hat-display)",
            "elements": {
                "h1, h2, h3, h4, h5, h6": {
                    "fontFamily": "var(--wp--preset--font-family--space-grotesk)"
                }
            }
        }
    }
}


